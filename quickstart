#!/bin/sh

# stop any existing processes first
./killem.sh
sleep 0.25

if [ "$SNIS_SOLARSYSTEM" = "" ]
then
	SNIS_SOLARSYSTEM=default
fi

uname -a | grep '^Darwin ' > /dev/null 2>&1
if [ "$?" = "0" ]
then
	OSX="1"	
else
	OSX=0
fi

usage()
{
	echo "usage: quickstart star-ship-name password" 1>&2
	echo "example:" 1>&2
	echo "./quickstart Enterprise tribbles" 1>&2
	exit 1
}

shipname="$1"
if [ "$1" = "" ]
then
	shipname="spacenerd"	
fi

password="$2"
if [ "$2" = "" ]
then
	password="spacenerd"
fi

# start the lobby server
ssgl/ssgl_server

sleep 0.25

start_multiverse()
{
	./snis_multiverse localhost nickname narnia
	echo "snis_multiverse died, status was $?" 1>&2
}

start_multiverse &

sleep 0.25

export SNISRAND=12345
./snis_server -l localhost -g SPACENERDS -L ALTAIR x --enable-enscript -m narnia &
if [ "$MULTIVERSE_TEST" != "" ]
then
	export SNISRAND=54321
	./snis_server -l localhost -g XSPACENERDS -L SIRIUS x --enable-enscript -m narnia &
	export SNISRAND=9557
	./snis_server -l localhost -g YSPACENERDS -L POLARIS x --enable-enscript -m narnia &
fi

sleep 2.50

# Some common aspect ratios.  Note: the game was designed on a machine
# with a 16:9 aspect ratio.  Other aspect ratios may have some UI issues.
#
ASPECT_RATIO="" # unspecified, figure it out from window manager
# ASPECT_RATIO="--aspect-ratio 5:4"
# ASPECT_RATIO="--aspect-ratio 4:3"
# ASPECT_RATIO="--aspect-ratio 16:10"
# ASPECT_RATIO="--aspect-ratio 16:9"

# start the game client and server in quickstart mode
./snis_client $ASPECT_RATIO --fullscreen --solarsystem "$SNIS_SOLARSYSTEM" --quickstart --starship "$shipname" --pw "$password" $@

exit $?

